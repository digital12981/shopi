{
  "name": "Shopee Delivery Partners",
  "description": "Sistema de recrutamento e pagamento para parceiros de entrega Shopee",
  "repository": "https://github.com/digital12981/ENTREGAS",
  "keywords": ["node", "express", "react", "vite", "typescript"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment",
      "value": "production"
    },
    "VEHICLE_API_KEY": {
      "description": "API key for vehicle information lookup",
      "required": true
    },
    "VITE_FOR4PAYMENTS_SECRET_KEY": {
      "description": "For4Payments API secret key",
      "required": true
    }
  },
  "scripts": {
    "postdeploy": "npm run build"
  }
}